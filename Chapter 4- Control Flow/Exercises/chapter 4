#exercise 1

#PASS

alien_color = "green"

if alien_color == "green":
    print("You just earned 5 points!")


#FAIL

alien_color = "yellow"

if alien_color == "red":
    print("You just earned 5 points!")
    


#exercise 2

#if block

alien_color = "green"

if alien_color == "green":
    print("You just earned 5 points!")
else:
    print("You just earned 10 points!")
    

#else block

alien_color = "red"

if alien_color == "green":
    print("You just earned 5 points!")
else:
    print("You just earned 10 points!")


#exercise 3

alien_color = "green"

if alien_color == "green":
    print("You just earned 5 points!")
elif alien_color == "yellow":
    print("You just earned 10 points!")
else:
    print("You just earned 15 points!")
    
    
alien_color = "red"

if alien_color == "green":
    print("You just earned 5 points!")
elif alien_color == "yellow":
    print("You just earned 10 points!")
else:
    print("You just earned 15 points!")
    
    
alien_color = "yellow"

if alien_color == "green":
    print("You just earned 5 points!")
elif alien_color == "yellow":
    print("You just earned 10 points!")
else:
    print("You just earned 15 points!")
    
    

#exercise 4

age = 10

if age < 2:
    print("The person is a baby.")
elif age < 4:
    print("The person is a toodler.")
elif age < 13:
    print("The person is a kid.")
elif age < 20:
    print("The person is a teenager.")
elif age < 65:
    print("The person is an adult.")
else:
    print("The person is an elder")
    
    
#exercise 5

favorite_fruits = ["grapes", "strawberries", "cherries"]

if "orange" in favorite_fruits:
    print("You like orange")
if "watermelon" in favorite_fruits:
    print("You like watermelon")
if "avocado" in favorite_fruits:
    print("You like avocado")
if "cherries" in favorite_fruits:
    print("You like cherries")
if "grapes" in favorite_fruits:
    print("You like grapes")
    

